@model ViewModels.UsersResponseVM
@{
    ViewBag.Title = "ManageSold";
}

<h2>ManageSold</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@Model.User.FirstName Solde</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.User.ID)
        @Html.HiddenFor(model => model.User.FirstName)
        @Html.HiddenFor(model => model.User.LastName)
        @Html.HiddenFor(model => model.User.Email)
        @Html.HiddenFor(model => model.User.Password)
        @Html.HiddenFor(model => model.User.Adress)
        @Html.HiddenFor(model => model.User.RoleID)
        <div class="form-group">
            @Html.LabelFor(model => model.User.Solde, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.User.Solde, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.User.Solde, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>